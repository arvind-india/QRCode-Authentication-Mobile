                       HorizontalOptions="CenterAndExpand"/>

                <Frame OutlineColor="LimeGreen" BackgroundColor="Transparent" Padding="2" Margin="80,20,80,20">

                    <Label Text="25Jkl3" 
                           HorizontalOptions="Center"
                           FontSize="30"
