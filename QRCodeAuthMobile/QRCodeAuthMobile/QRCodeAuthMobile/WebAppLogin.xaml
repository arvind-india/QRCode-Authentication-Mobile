             mc:Ignorable="d"
             x:Class="QRCodeAuthMobile.WebAppLogin">



    <ContentPage.Content>

        <StackLayout BackgroundColor="#005073" Padding="50">

            <StackLayout BackgroundColor="Transparent" VerticalOptions="CenterAndExpand">

                <Label Text=" Enter The Security Code Below To Access The Website:"
