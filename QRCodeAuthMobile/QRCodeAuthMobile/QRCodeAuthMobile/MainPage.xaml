<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="QRCodeAuthMobile.MainPage">


    <StackLayout BackgroundColor="#005073" Padding="40">

        <StackLayout BackgroundColor="Transparent" VerticalOptions="CenterAndExpand">

            <Label Text="The Authenticator!"
                       HorizontalOptions="CenterAndExpand"
                       Style="{StaticResource lblStyle}"/>

            <Image Source="logo.jpg"/>

            <Label Text="Set Up Desired Authentication Method"
                       HorizontalOptions="CenterAndExpand"
                       Style="{StaticResource lblStyle}"/>

			<Button Text="Face ID"
                    Style="{StaticResource buttonStyle}"
					Clicked="BtnFaceID_Clicked"/>
			<Button Text="Finger Print ID"
                    Style="{StaticResource buttonStyle}"
					Clicked="BtnFingerPrint_Clicked"/>

        </StackLayout>

    </StackLayout>


</ContentPage>
