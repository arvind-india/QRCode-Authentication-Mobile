<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="QRCodeAuthMobile.SelectType">
    
    <ContentPage.Content>

        <StackLayout BackgroundColor="#005073" Padding="40">

            <Label Text="Welcome To The Authenticator!"
                   HorizontalOptions="CenterAndExpand"
                   Style="{StaticResource lblStyle}"/>

            <Image Source="logo.jpg"/>

            <StackLayout BackgroundColor="Transparent" VerticalOptions="CenterAndExpand">

                <Label Text="Select Registration Type"
                       HorizontalOptions="CenterAndExpand"
                       Style="{StaticResource lblStyle}"/>

                <Button Text="Student"
                        Style="{StaticResource buttonStyle}"/>
                <Button Text="Faculty"
                        Style="{StaticResource buttonStyle}"/>
                <Button Text="Staff"
                        Style="{StaticResource buttonStyle}"/>

            </StackLayout>

        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>